<h1>Flight Information</h1>

<% @flights.each do |flight| %>
  <section id='flight<%= flight.id %>'>
    <%= flight.flight_number %>
    <% flight.passengers.each do |passenger| %>
    <section id='passenger-<%= passenger.id %>'>
      <%= passenger.name %>
      <%= link_to 'Remove', remove_passenger_path(id: passenger.id, flight_id: flight.id), method: :delete%>
    </section>
    <% end %>
  </section>
  <% end %>
